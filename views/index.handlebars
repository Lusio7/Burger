<div class="container">	
	<div class="jumbotron"> 
		<img src="/assets/img/burger.png" style="margin-left: 40%; width:200px; height:200px;"> 
		<h1> Come Getcha Some! </h1>
	</div>

<div class="jumbotron">
	<div class="row">
		<div class="col-md-4 col-md-offset-1">
			<div class="panel-panel default">
				<ol>
				{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item rtc">
						<div class="input-group">
							<p class="lead"> {{this.burger_name}} </p>
							<span class="input-group-btn">
								<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-default btn-success btn-lg" type="submit"> EAT IT! </button>
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
				{{/each}}
			</ol>
		</div>
	</div>

	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<div class="panel panel-default">
				<ol class="list-group">
				{{#each burgers}}
					{{#if this.devoured}}
					<li class="list-group-item eaten">
						<p class="lead">{{this.burger_name}} </p>
						<span class="input-group-btn">
								<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="false">
									<button class="btn btn-default btn-success btn-lg" type="submit"> PURGE IT! </button>
								</form>
							</span>
					</li>
					{{/if}}
				{{/each}}
				</ol>
			</div>
		</div>
	</div>
	<div class="col-md-10 col-md-offset-1">
		<p class="lead"> What burger sounds good? </p>

		<form class="create-update-form" action="burgers/create" method="POST">

			<div class="form-group">
				<textarea class="form-control input-lg" type="text" name="b_name" rows="3"> </textarea>
			</div>

			<button class="btn btn-default btn-success btn-lg" type="submit" style="margin-left: 42%;">ADD IT!</button>
		</form>
	</div>
</div>
	</div>